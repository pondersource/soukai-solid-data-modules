{
  "name": "soukai-solid-data-modules",
  "version": "0.1.6",
  "description": "Data Modules for Soukai Solid ODM",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "clean": "rm -rf lib/",
    "build": "npm run clean && tsc",
    "lint": "eslint . --ext .ts",
    "test": "jest --config jest.config.js",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run lint",
    "version": "git add -A src",
    "postversion": "git push && git push --tags",
    "check-updates": "npx npm-check-updates",
    "check-updates:minor": "npx npm-check-updates --target minor",
    "check-updates:patch": "npx npm-check-updates --target patch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pondersource/soukai-solid-data-modules.git"
  },
  "files": [
    "lib/**/*"
  ],
  "keywords": [
    "typescript",
    "npm",
    "template",
    "ts"
  ],
  "author": "Reza Soltani",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/pondersource/soukai-solid-data-modules/issues"
  },
  "homepage": "https://github.com/pondersource/soukai-solid-data-modules#readme",
  "devDependencies": {
    "@types/jest": "^29.4.0",
    "@types/node": "^18.13.0",
    "@typescript-eslint/eslint-plugin": "^5.51.0",
    "@typescript-eslint/parser": "^5.51.0",
    "ansi-regex": ">=6.0.1",
    "eslint": "^8.33.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.1.1",
    "jest": "^29.4.1",
    "ts-jest": "^29.0.5",
    "@types/uuid": "^9.0.6",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "uuid": "^9.0.1",
    "soukai-solid": "^0.5.2"
  }
}
